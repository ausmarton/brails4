.form-signin
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => "form" } ) do |f|
    %h2.form-signin-heading Sign up
    =# devise_error_messages!
    .login-wrap
      = f.input :email, autofocus: true, label: false, input_html: { class: 'form-control', 'required' => :true }, placeholder: 'Email Address'
      = f.input :password, label: false, input_html: { class: 'form-control', 'required' => :true }, placeholder: 'Password'
      = f.input :password_confirmation, label: false, input_html: { class: 'form-control', 'required' => :true }, placeholder: 'Confirm Password'
      .submit
        = f.submit "Sign up", class: 'btn btn-lg btn-login btn-block'
      
      .forget
        = render "devise/shared/links"