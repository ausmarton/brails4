.form-signin
  = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => "form" })  do |f|
    %h2.form-signin-heading Forgot your password?
    .login-wrap
      /= devise_error_messages!
      = f.email_field :email, :autofocus => true, placeholder: 'Email Address', class: 'form-control', :required => :true
      .submit  
        = f.submit "Reset password instructions", class: 'btn btn-lg btn-login btn-block'
        = render "devise/shared/links"
